model Roster {
  id             String   @id @default(cuid())
  year           Int
  month          Int
  totalEmployees Int
  schedule       Json     // Stores the entire schedule
  summary        Json     // Stores summary statistics
  createdAt      DateTime @default(now())
  
  @@unique([year, month])
  @@index([year, month])
}

model Employee {
  id           String      @id @default(cuid())
  employeeId   String      @unique // Like EMP0001
  name         String
  departmentId String?
  department   Department? @relation(fields: [departmentId], references: [id])
  position     String?
  createdAt    DateTime    @default(now())
}

model Department {
  id        String     @id @default(cuid())
  name      String     @unique
  employees Employee[]
}
